<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--首次进入无黑色-->
    <style name="welcomeTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/app_start_image</item>
    </style>

    <!--首页-->
    <style name="Theme.Translucent.Navigation" parent="AppTheme">
    </style>

    <!--activity-->
    <style name="Theme.Activity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--toolbar-->
    <style name="Theme.ToolBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <!--
        <item name="android:textColorPrimary">@color/colorRed</item>
        -->
    </style>

    <style name="Theme.ToolBar.Base.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="Theme.ToolBar.Base.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="Theme.ToolBar.Home" parent="Theme.AppCompat.Light.NoActionBar">

    </style>




    <style name="Theme.Home" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle_context">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextStyle_news_list_title_context">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="tvinfo_tv_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="tvinfo_tv_other">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTabDefault</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="tvinfo_tv_other_info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTabDefault</item>
    </style>

    <style name="item_subtitle_tv_other">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTabDefault</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="item_subtitle_tv_other_info">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTabDefault</item>
    </style>

    <style name="toolbar_title_content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="tvinfo_tv_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTvInfoContent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="item_prevue_tv_season">
        <item name="android:text">16sp</item>
        <item name="android:textColor">@color/colorTvInfoContent</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="item_prevue_tv_time">
        <item name="android:text">16sp</item>
        <item name="android:textColor">@color/colorTvInfoContent</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="item_resource_bottomtext">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTvInfoContent</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="item_resource_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="link_layout_bg">
        <item name="android:background">@color/colorWindowGray</item>
    </style>

    <style name="link_btn">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorTabDefault</item>
        <item name="android:background">@drawable/shape_btn_share</item>
    </style>

    <style name="newsinfo_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="newsinfo_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
