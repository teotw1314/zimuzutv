<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <!-- 纵横比（高宽比） 1.5-->
    <com.skyland.zimuzutv.zimuzutv.Widget.AspectRatioImageView
        android:id="@+id/item_home_tvs_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_error"
        app:aspectRatio="1.5" />


    <TextView
        android:id="@+id/item_home_tvs_tvName"
        style="@style/TextStyle_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_home_tvs_iv"
        android:text="tv name" />

    <TextView
        android:id="@+id/item_home_tvs_tvchannal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_home_tvs_iv"
        android:background="#4d000000"
        android:padding="2dp"
        android:text="电视剧"
        android:textColor="@color/colorWhite"
        android:textSize="12dp" />


</RelativeLayout>
