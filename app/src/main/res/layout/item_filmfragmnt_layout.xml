<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/film_frg_iv_poster"
        android:layout_width="105dp"
        android:layout_height="156dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/no_tv_poster" />

    <TextView
        android:id="@+id/film_frg_tv_cname"
        style="@style/tvinfo_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/film_frg_iv_poster"
        android:layout_toRightOf="@id/film_frg_iv_poster"
        android:text="超感猎杀" />

    <TextView
        android:id="@+id/film_frg_tv_tvtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/film_frg_tv_cname"
        android:background="@drawable/shape_tvtype_bg"
        android:text="电视剧"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/film_frg_str_ename"
        style="@style/tvinfo_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film_frg_tv_cname"
        android:layout_toEndOf="@+id/film_frg_iv_poster"
        android:text="原名：" />

    <TextView
        android:id="@+id/film_frg_tv_ename"
        style="@style/tvinfo_tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/film_frg_str_ename"
        android:layout_toEndOf="@+id/film_frg_str_ename"
        android:text="" />

    <TextView
        android:id="@+id/film_frg_str_area"
        style="@style/tvinfo_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film_frg_str_ename"
        android:layout_toEndOf="@+id/film_frg_iv_poster"
        android:text="区域：" />

    <TextView
        android:id="@+id/film_frg_tv_area"
        style="@style/tvinfo_tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/film_frg_str_area"
        android:layout_toEndOf="@+id/film_frg_str_area"
        android:text="" />

    <TextView
        android:id="@+id/film_frg_str_state"
        style="@style/tvinfo_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film_frg_str_area"
        android:layout_toEndOf="@+id/film_frg_iv_poster"
        android:text="状态：" />

    <TextView
        android:id="@+id/film_frg_tv_state"
        style="@style/tvinfo_tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/film_frg_str_state"
        android:layout_toEndOf="@+id/film_frg_str_state"
        android:text="" />

    <TextView
        android:id="@+id/film_frg_str_type"
        style="@style/tvinfo_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film_frg_str_state"
        android:layout_toEndOf="@+id/film_frg_iv_poster"
        android:text="类型：" />

    <TextView
        android:id="@+id/film_frg_tv_type"
        style="@style/tvinfo_tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/film_frg_str_type"
        android:layout_toEndOf="@+id/film_frg_str_type"
        android:text="" />

    <TextView
        android:id="@+id/film_frg_str_scan"
        style="@style/tvinfo_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film_frg_str_type"
        android:layout_toEndOf="@+id/film_frg_iv_poster"
        android:text="浏览：" />

    <TextView
        android:id="@+id/film_frg_tv_scan"
        style="@style/tvinfo_tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/film_frg_str_scan"
        android:layout_toEndOf="@+id/film_frg_str_scan"
        android:text="" />

    <TextView
        android:id="@+id/film_frg_str_explain"
        style="@style/tvinfo_tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/film_frg_str_scan"
        android:layout_toEndOf="@+id/film_frg_iv_poster"
        android:text="说明：" />

    <TextView
        android:id="@+id/film_frg_tv_explain"
        style="@style/tvinfo_tv_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/film_frg_str_explain"
        android:layout_toEndOf="@+id/film_frg_str_explain"
        android:text="" />

</RelativeLayout>
